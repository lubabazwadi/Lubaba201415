<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDFF4D07"
    tools:context=".SQLiteFetch1">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Student"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/idSearchS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeTitle"
        android:ems="10"
        android:hint="Enter Student ID"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <Button
        android:id="@+id/fetchS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idSearchS"
        android:layout_centerHorizontal="true"
        android:onClick="getStudentInfoSQL"
        android:text="Fetch (SQLite)" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fetchS"
        android:id="@+id/studentInfoS"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SQfname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/SQfsurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/SQffather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/SQfnationalID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/SQfbirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/SQfgender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="TextView" />
    </LinearLayout>
</RelativeLayout>